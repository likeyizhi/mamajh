<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.yqx.mamajh.activity.OrderCommentActivity">

    <include
        layout="@layout/common_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5sp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/ordersdj" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:text="店铺名"
                    android:textColor="@color/gray_700" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满意请给5星哦"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_200" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="服务态度" />

                <RatingBar
                    android:id="@+id/rating_fwtd"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:max="5"
                    android:numStars="5"
                    android:progressDrawable="@drawable/ratingbar"
                    android:rating="5"
                    android:stepSize="1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="产品质量" />

                <RatingBar
                    android:id="@+id/rating_cpzl"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:max="5"
                    android:numStars="5"
                    android:progressDrawable="@drawable/ratingbar"
                    android:rating="5"
                    android:stepSize="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="送货速度" />

                <RatingBar
                    android:id="@+id/rating_shsd"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:max="5"
                    android:numStars="5"
                    android:progressDrawable="@drawable/ratingbar"
                    android:rating="5"
                    android:stepSize="1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_200" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="晒图"
                android:textColor="@color/colorPrimary" />
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_img1"
                    android:src="@mipmap/jiat"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/iv_img2"
                    android:src="@mipmap/jiat"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/iv_img3"
                    android:src="@mipmap/jiat"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <GridView
                android:id="@+id/gv_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                android:numColumns="4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_200" />

            <com.yqx.mamajh.widget.ZListview
                android:id="@+id/lv_productlist"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white" />

            <EditText
                android:id="@+id/et_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="top|left"
                android:hint="长度在1~200个字之间写下购买体会或者使用过程中带来的帮助可以为其他爸爸妈妈提供帮助"
                android:minLines="4"
                android:padding="10dp" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="提交评价"
                app:bootstrapBrand="danger"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:roundedCorners="true" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
