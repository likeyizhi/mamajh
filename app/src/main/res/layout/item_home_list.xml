<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/ten"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/ten">

        <com.yqx.mamajh.widget.DynamicHeightImageView
            android:id="@+id/iv_img_item"
            android:layout_width="@dimen/eighty"
            android:layout_height="@dimen/eighty"
            tools:src="@mipmap/ic_launcher" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_img_item"
            android:layout_alignTop="@+id/iv_img_item"
            android:layout_marginRight="@dimen/ten"
            android:layout_toRightOf="@+id/iv_img_item"
            android:paddingLeft="@dimen/ten">

            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/textColorTitle"
                android:textSize="@dimen/eighteen_sp"
                tools:text="哈哈标题" />

            <include
                layout="@layout/horizontal_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/five">

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="@color/textColorCommon"
                    tools:text="¥89起送／配送费10元" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:lines="1"
                    android:textColor="@color/textColorCommon"
                    tools:text="800km" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_star_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/ten"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/five"
                    android:numStars="5"
                    android:rating="5" />

                <TextView
                    android:id="@+id/tv_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five"
                    android:textColor="@color/textColorCommon"
                    tools:text="月销333单" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>