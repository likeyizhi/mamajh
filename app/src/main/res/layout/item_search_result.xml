<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_thisShop"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_searchShop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_searchShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="商店名" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <RatingBar
                    android:id="@+id/rbar_sr"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:max="5"
                    android:numStars="5"
                    android:progressDrawable="@drawable/ratingbar"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/tv_saleTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/rbar_sr"
                    android:text="销量" />

                <TextView
                    android:id="@+id/tv_sareTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_saleTotal"
                    android:text="评价" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="距离" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_shopGoods1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/iv_kong1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_productName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:paddingLeft="10dp"
                android:text="千手人屠何大智御用飞机杯" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >



                <TextView
                    android:id="@+id/tv_selaCount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月销100份"
                    android:paddingLeft="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/tv_markPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥998"
                    android:paddingRight="10dp"
                    android:textColor="#ea6969"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#909090"/>
        </LinearLayout>

    </LinearLayout>

