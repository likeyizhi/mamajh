<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <LinearLayout
        android:id="@+id/ll_ctrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="right"
            android:id="@+id/ll_unPay"
            android:visibility="gone"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_unPayCancle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/proinfo_bg"
                android:text="取消订单" />

            <Button
                android:id="@+id/btn_unPayTpPay"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="去支付"
                android:layout_marginLeft="10dp"
                android:background="@drawable/other_pro_bg"
                android:textColor="#ea6969" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_unDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="right"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_unDelCancle"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/proinfo_bg"
                    android:text="取消订单" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sureGet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="right"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_sureGet"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/other_pro_bg"
                    android:textColor="#ea6969"
                    android:text="确认收货" />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_toComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="right"
                android:orientation="horizontal" >
                <Button
                    android:id="@+id/btn_ToConnemt"
                    android:layout_width="100dp"
                    android:background="@drawable/other_pro_bg"
                    android:textColor="#ea6969"
                    android:layout_height="wrap_content"
                    android:text="去评价" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_alreadyCancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="已取消"
            android:visibility="gone"
            android:gravity="right"
            android:textSize="16sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:layout_above="@+id/ll_ctrl"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/ib_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="10dp"
                    android:src="@drawable/home_back_icon_pink" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#1678F7"
                    android:text="我的订单" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linearLayout1"
                android:layout_marginTop="5dp"
                android:background="#ffffff" >

                <TextView
                    android:padding="5dp"
                    android:id="@+id/tv_dingDanHaoMa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号码：00000000000000" />

                <TextView
                    android:id="@+id/tv_zhuangTai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:padding="10dp"
                    android:text="已取消"
                    android:textColor="#ea6969" />

                <TextView
                    android:id="@+id/tv_xiaDanShiJian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_dingDanHaoMa"
                    android:padding="5dp"
                    android:text="下单时间：2020-10-10 " />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/relativeLayout1"
                android:layout_marginTop="5dp"
                android:background="#FFFEDD" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="80dp"
                    android:padding="20dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/store_ditu" />

                <TextView
                    android:id="@+id/tV_shouHuoRen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/imageView1"
                    android:text="收货人：妈妈江湖" />

                <TextView
                    android:id="@+id/tv_diZhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView1"
                    android:layout_alignLeft="@+id/tV_shouHuoRen"
                    android:padding="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="中央绿地广场B10B 1629室" />
            </RelativeLayout>

            <com.yqx.mamajh.widget.MyListview
                android:id="@+id/lv_shangPinLieBiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                >
            </com.yqx.mamajh.widget.MyListview>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lv_shangPinLieBiao"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="配送方式："
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_peiSongFangShi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:text="妈妈江湖"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="付款方式："
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_fuKuanFangShi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:text="妈妈江湖"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="其他信息："
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_qiTaXinXi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:text="妈妈江湖"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="备        注："
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_beiZhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:text="妈妈江湖"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/ll_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="1dp"
                        android:background="#FFFFFF"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_proNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingLeft="10dp"
                            android:text="共x件商品，"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_orderPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:paddingRight="10dp"
                            android:text="0"
                            android:textColor="#ea6969"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#FFFFFF"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingLeft="10dp"
                            android:text="运费："
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_deliveryPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:paddingRight="10dp"
                            android:text="0"
                            android:textColor="#ea6969"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#FFFFFF"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingLeft="10dp"
                            android:text="订单未付金额："
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_unPayMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:paddingRight="10dp"
                            android:text="0"
                            android:textColor="#ea6969"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>