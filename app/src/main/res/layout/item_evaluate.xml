<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/evaluate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.yqx.mamajh.widget.RoundImageView
            android:id="@+id/iv_evaluate_shop_icon"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_gravity="left"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_evaluate_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="妈妈江湖"
                    />
                <TextView
                    android:id="@+id/tv_evaluate_timie"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-01-01"
                    />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7e7e7e"/>
            <TextView
                android:id="@+id/tv_evaluate_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="妈妈江湖"/>
            <LinearLayout
                android:id="@+id/ll_evaluate_imgs"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_evaluate_img01"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv_evaluate_img02"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv_evaluate_img03"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_chanpin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品："/>
                <TextView
                    android:id="@+id/tv_evaluate_product"
                    android:layout_toRightOf="@+id/tv_chanpin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="妈妈江湖"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_evaluate_buy_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="购买日期：2017-01-01"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/evaluate"
        android:layout_marginBottom="5dp"
        android:background="#7e7e7e"/>
</RelativeLayout>
