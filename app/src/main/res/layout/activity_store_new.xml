<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#FFFFFF"
                android:paddingTop="25dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="#f88"
                    />
                <ImageButton
                    android:id="@+id/ib_back"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/home_back_icon_pink" />
                <com.yqx.mamajh.widget.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="50dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/iv_shop"
                    android:src="@mipmap/ic_launcher"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="妈妈江湖"
                    android:id="@+id/tv_shopName"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/iv_shop"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/tv_shopName"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ll_contsct"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_marginRight="@dimen/twenty"
                        android:background="@drawable/shop_contact_collect_bg"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/lxkf"/>
                        <TextView
                            android:id="@+id/tv_contsct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/ten"
                            android:text="联系客服"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="@dimen/eighteen_sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_collent"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/twenty"
                        android:layout_marginRight="@dimen/five"
                        android:background="@drawable/shop_contact_collect_bg"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_collect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/dsc"/>
                        <TextView
                            android:id="@+id/tv_collect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/ten"
                            android:text="收藏店铺"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="@dimen/eighteen_sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <RadioGroup
                android:id="@+id/rg_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_remen"
                    android:layout_width="0dp"
                    android:text="热门分类"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:drawableTop="@mipmap/rmfl"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rb_quanbu"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="全部宝贝"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:drawableTop="@mipmap/qbbb"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rb_pingjia"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="评价"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:drawableTop="@mipmap/pj1"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rb_shangjiaxinxi"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="商家信息"
                    android:button="@null"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:drawableTop="@mipmap/sjxx"
                    android:layout_height="wrap_content" />
            </RadioGroup>
            <android.support.v4.view.ViewPager
                android:id="@+id/vp_store"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
