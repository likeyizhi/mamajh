<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_mine_order_product_item_img"
        android:layout_width="75dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="75dp"
        android:src="@mipmap/ic_launcher"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_order_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"

            android:text="{标题}"
            android:textColor="@color/gray_700"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_order_product_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            android:text="{规格}"
            android:textColor="#999999" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_order_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="￥{xx}"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/tv_item_order_product_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥{xxx}"
            android:textSize="14sp"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/tv_item_order_product_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X {num}"
            android:textSize="14sp"
            android:textColor="#999999"/>

    </LinearLayout>

</LinearLayout>
