<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#EEEEEE"
              android:orientation="horizontal"
              android:padding="5dp">

    <ImageView
        android:id="@+id/iv_mine_order_product_item_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_order_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="{标题}"
            android:textColor="@color/gray_700"/>

        <TextView
            android:id="@+id/tv_item_order_product_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="{规格}"
            android:textColor="@color/gray_700"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_order_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="￥{xx}"
            android:textColor="@color/gray_700"/>

        <TextView
            android:id="@+id/tv_item_order_product_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥{xxx}"
            android:textColor="@color/gray_700"/>

        <TextView
            android:id="@+id/tv_item_order_product_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X {num}"
            android:textColor="@color/gray_700"/>

    </LinearLayout>

</LinearLayout>
