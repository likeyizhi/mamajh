<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_box</item>
    </style>
    <!-- 圆形 CheckBox -->
    <style name="round_check" parent="@style/Material.Drawable.CheckBox">

        <item name="cbd_cornerRadius">10dp</item>
        <item name="cbd_strokeColor">@color/colorPrimary</item>
        <item name="cbd_animDuration">100</item>
    </style>
    <!-- TabPageIndicator Style-->
    <style name="TabPageIndicator" parent="Material.Widget.TabPageIndicator">
        <item name="tpi_indicatorColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@drawable/tab_tpi_text_color</item>
    </style>


    <style name="TagGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="atg_isAppendMode">false</item>
        <item name="atg_borderColor">#eeeeee</item>
        <item name="atg_textColor">#666</item>
        <item name="atg_backgroundColor">#eeeeee</item>
        <item name="atg_dashBorderColor">#eeeeee</item>
        <item name="atg_inputHintColor">#eeeeee</item>
        <item name="atg_inputTextColor">#eeeeee</item>
        <item name="atg_checkedBorderColor">#eeeeee</item>
        <item name="atg_checkedTextColor">#FFFFFF</item>
        <item name="atg_checkedMarkerColor">#FFFFFF</item>
        <item name="atg_checkedBackgroundColor">#eeeeee</item>
        <item name="atg_pressedBackgroundColor">#EDEDED</item>
        <item name="atg_borderStrokeWidth">0.5dp</item>
        <item name="atg_textSize">14sp</item>
        <item name="atg_horizontalSpacing">8dp</item>
        <item name="atg_verticalSpacing">14dp</item>
        <item name="atg_horizontalPadding">12dp</item>
        <item name="atg_verticalPadding">3dp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearence</item>
    </style>

    <style name="TabTextAppearence" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
</resources>
